<UserControl x:Class="Task_Manager.Views.AddNoteUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Task_Manager.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    
    <Grid Background="#2B3A55">
        
        <!-- Back Button -->
        <Button Content="Back"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="Gray"
                Width="60"
                Height="30"
                Margin="0,10,10,0"
                Click="BackButton_Click"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="800">
            
            <!-- Heading -->
            <TextBlock Text="Add New Note"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,30"/>

            <!-- Card Container -->
            <Border Background="#32425F"
                    CornerRadius="12"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>

                    <!-- Title -->
                    <TextBlock Text="Title:" 
                               Foreground="White" 
                               FontSize="18" 
                               FontFamily="{StaticResource Montserrat-Regular}"
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="TitleBox"
                             Margin="0,0,0,15"
                             Text="{Binding NoteName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                             Style="{DynamicResource NoteTextBoxStyle}"
                             FontFamily="{StaticResource Montserrat-Regular}"/>

                    <!-- Content -->
                    <TextBlock Text="Content:"
                               Foreground="White"
                               FontFamily="{StaticResource Montserrat-Regular}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="ContentBox"
                             Style="{DynamicResource NoteTextBoxStyle}"
                             Height="250"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FontFamily="{StaticResource Montserrat-Regular}"
                             Text="{Binding NoteText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

                </StackPanel>
            </Border>

            <!-- Save Button -->
            <Button Content="Save"
                    Width="100"
                    HorizontalAlignment="Right"
                    Style="{DynamicResource RoundedButton}"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>